<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoveViewsUsingAFlingAnimationActivity">

    <TextView
        android:id="@+id/moveViewsUsingAFlingAnimationActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="投掷/甩动/滑动动画"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/moveViewsUsingAFlingAnimationActivityTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="尝试拖动图片"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moveViewsUsingAFlingAnimationActivityTitle" />

    <ImageView
        android:id="@+id/flingAnimationImageView"
        android:layout_width="347dp"
        android:layout_height="190dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/crystal_liu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moveViewsUsingAFlingAnimationActivityTip" />
</androidx.constraintlayout.widget.ConstraintLayout>